{
    "name": "Turntable",
    "productName": "Turntable",
    "version": "0.0.1",
    "main": "dist/main.js",
    "scripts": {
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "start-electron": "npm run build-electron && electron dist/main.js",
        "build-electron": "ng build --base-href . && cp src/electron/* dist",
        "package-mac": "npm run build-electron && electron-packager . Turntable --overwrite --asar=true --platform=darwin --arch=x64  --icon=src/assets/icons/mac/turntable1024.icns  --prune=true --out=release-builds --ignore=node_modules/.bin",
        "package-windows": "npm run build-electron && electron-packager . Turntable --overwrite --asar=true --platform=win32  --arch=ia32 --icon=src/assets/icons/win/turntable1024.ico   --prune=true --out=release-builds --ignore=node_modules/.bin",
        "package-linux": "npm run build-electron && electron-packager . Turntable --overwrite --asar=true --platform=linux  --arch=x64  --icon=src/assets/icons/linux/turntable1024.png --prune=true --out=release-builds --ignore=node_modules/.bin",
        "create-installer-mac": "node installers/mac/createinstaller.js",
        "create-installer-windows": "node installers/windows/createinstaller.js",
        "full-build-mac": "npm run build-electron && npm run package-mac && npm run create-installer-mac",
        "full-build-windows": "npm run build-electron && npm run package-windows && npm run create-installer-windows"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^4.2.4",
        "@angular/common": "^4.2.4",
        "@angular/compiler": "^4.2.4",
        "@angular/core": "^4.2.4",
        "@angular/forms": "^4.2.4",
        "@angular/http": "^4.2.4",
        "@angular/platform-browser": "^4.2.4",
        "@angular/platform-browser-dynamic": "^4.2.4",
        "@angular/router": "^4.2.4",
        "@types/youtube": "0.0.29",
        "angular2-fontawesome": "^0.9.3",
        "core-js": "^2.4.1",
        "font-awesome": "^4.7.0",
        "moment": "^2.18.1",
        "ng2-dragula": "^1.5.0",
        "ng2-youtube-player": "0.0.3",
        "rxjs": "^5.4.2",
        "zone.js": "^0.8.14"
    },
    "devDependencies": {
        "@angular/cli": "1.3.2",
        "@angular/compiler-cli": "^4.2.4",
        "@angular/language-service": "^4.2.4",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "codelyzer": "~3.1.1",
        "electron": "^1.7.5",
        "electron-installer-dmg": "^0.2.1",
        "electron-packager": "^9.0.1",
        "electron-winstaller": "^2.6.3",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "path": "^0.12.7",
        "protractor": "~5.1.2",
        "ts-node": "~3.2.0",
        "tslint": "~5.3.2",
        "typescript": "~2.3.3",
        "url": "^0.11.0"
    }
}
